package utils {
	
	/**
	 * The MathUtil Class provides some basic Math utility functions.
	 */
	public class MathUtil {
		
		public function MathUtil() {
		} 
		
		/**
		 * The addOne method will add one to whatever is passed to it
		 * and return the new value.
		 */
		public function addOne(value:Number):Number {
			return value + 1;
		}
	}
}
